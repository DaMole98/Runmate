<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/steps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/rubik"
        android:text="Passi"
        android:textColor="@color/black"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_steps_train"
        app:layout_constraintEnd_toEndOf="@+id/stepsCircle"
        app:layout_constraintStart_toStartOf="@+id/stepsCircle"
        app:layout_constraintTop_toTopOf="@+id/stepsCircle" />

    <TextView
        android:id="@+id/distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rubik"
        android:text="Distanza"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/distanceCircle"
        app:layout_constraintEnd_toEndOf="@+id/distanceCircle"
        app:layout_constraintStart_toStartOf="@+id/distanceCircle"
        app:layout_constraintTop_toTopOf="@+id/distanceCircle"
        app:layout_constraintVertical_bias="0.3" />

    <TextView
        android:id="@+id/calories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rubik"
        android:text="Calorie"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/caloriesCircle"
        app:layout_constraintEnd_toEndOf="@+id/caloriesCircle"
        app:layout_constraintStart_toStartOf="@+id/caloriesCircle"
        app:layout_constraintTop_toTopOf="@+id/caloriesCircle"
        app:layout_constraintVertical_bias="0.3" />

    <TextView
        android:id="@+id/tv_steps_train"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/rubik"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/stepsCircle"
        app:layout_constraintEnd_toEndOf="@+id/stepsCircle"
        app:layout_constraintStart_toStartOf="@+id/stepsCircle" />

    <TextView
        android:id="@+id/tv_distance_train"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rubik"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/distanceCircle"
        app:layout_constraintEnd_toEndOf="@+id/distanceCircle"
        app:layout_constraintStart_toStartOf="@+id/distanceCircle"
        app:layout_constraintTop_toTopOf="@+id/distanceCircle"
        app:layout_constraintVertical_bias="0.6" />

    <TextView
        android:id="@+id/tv_distance_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rubik"
        android:text="m"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/distanceCircle"
        app:layout_constraintEnd_toEndOf="@+id/distanceCircle"
        app:layout_constraintStart_toStartOf="@+id/distanceCircle"
        app:layout_constraintTop_toTopOf="@+id/distanceCircle"
        app:layout_constraintVertical_bias="0.8" />

    <TextView
        android:id="@+id/tv_calories_train"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rubik"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/caloriesCircle"
        app:layout_constraintEnd_toEndOf="@+id/caloriesCircle"
        app:layout_constraintStart_toStartOf="@+id/caloriesCircle"
        app:layout_constraintTop_toTopOf="@+id/caloriesCircle"
        app:layout_constraintVertical_bias="0.6" />

    <TextView
        android:id="@+id/tv_calories_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rubik"
        android:text="kcal"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/caloriesCircle"
        app:layout_constraintEnd_toEndOf="@+id/caloriesCircle"
        app:layout_constraintStart_toStartOf="@+id/caloriesCircle"
        app:layout_constraintTop_toTopOf="@+id/caloriesCircle"
        app:layout_constraintVertical_bias="0.8" />

    <ImageView
        android:id="@+id/stepsCircle"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/training_circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/distanceCircle"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/training_circle"
        app:layout_constraintEnd_toStartOf="@+id/caloriesCircle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stepsCircle" />

    <ImageView
        android:id="@+id/caloriesCircle"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/training_circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/distanceCircle"
        app:layout_constraintTop_toBottomOf="@+id/stepsCircle" />

    <View
        android:id="@+id/v_chrono"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_margin="30dp"
        android:background="@drawable/layout_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Chronometer
        android:id="@+id/chronometer_train"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:format="0:00:00"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@id/v_chrono"
        app:layout_constraintEnd_toEndOf="@id/v_chrono"
        app:layout_constraintStart_toStartOf="@id/v_chrono"
        app:layout_constraintTop_toTopOf="@id/v_chrono" />

    <ImageButton
        android:id="@+id/btn_play_pause_train"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@id/v_chrono"
        app:layout_constraintEnd_toStartOf="@+id/chronometer_train"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toStartOf="@id/v_chrono"
        app:layout_constraintTop_toTopOf="@id/v_chrono"
        app:srcCompat="@drawable/play_circle" />

    <ImageButton
        android:id="@+id/btn_stop_train"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@id/v_chrono"
        app:layout_constraintEnd_toEndOf="@id/v_chrono"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toEndOf="@+id/chronometer_train"
        app:layout_constraintTop_toTopOf="@id/v_chrono"
        app:srcCompat="@drawable/stop_circle" />

</androidx.constraintlayout.widget.ConstraintLayout>
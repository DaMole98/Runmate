<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageButton
        android:id="@+id/btn_walk"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:background="@android:color/transparent"
        android:src="@drawable/activity_choice_circle"
        app:layout_constraintBottom_toTopOf="@+id/btn_run"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_run"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/activity_choice_circle"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_walk"
        app:layout_constraintVertical_bias="0.3" />

    <TextView
        android:id="@+id/tv_walk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Camminata"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_walk"
        app:layout_constraintEnd_toEndOf="@+id/btn_walk"
        app:layout_constraintStart_toStartOf="@+id/btn_walk"
        app:layout_constraintTop_toTopOf="@+id/btn_walk" />

    <TextView
        android:id="@+id/tv_run"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Corsa"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_run"
        app:layout_constraintEnd_toEndOf="@+id/btn_run"
        app:layout_constraintStart_toStartOf="@+id/btn_run"
        app:layout_constraintTop_toTopOf="@+id/btn_run" />
</androidx.constraintlayout.widget.ConstraintLayout>
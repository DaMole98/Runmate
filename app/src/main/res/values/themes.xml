<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <!-- <style name="Theme.Runmate" parent="Theme.MaterialComponents.Light.NoActionBar"> -->
    <style name="Theme.Runmate" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:forceDarkAllowed">false</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#33B5B5</item>
        <item name="colorPrimaryDark">#33B5B5</item>
        <item name="colorAccent">#33B5B5</item>
    </style>
    <style name="IconButton" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">#33B5B5</item>
        <item name="colorPrimaryDark">#33B5B5</item>
        <item name="colorAccent">#33B5B5</item>
    </style>
    <style name="TargetView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingVertical">15dp</item>
    </style>
    <style name="TargetEditText">
        <item name="android:layout_width">wrap_content </item>
        <item name="android:layout_height">50dp</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">number</item>
    </style>
    <style name="RegistrationEditText">
        <item name="android:layout_width">wrap_content </item>
        <item name="android:layout_height">50dp</item>
        <item name="android:ems">10</item>
    </style>
    <style name="AppTheme" parent="Theme.MaterialComponents">
        <item name="colorSurface">#33B5B5</item>
    </style>


</resources>